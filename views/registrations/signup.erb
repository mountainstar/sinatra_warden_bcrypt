


<form method="post" action="/registrations">
<fieldset>
<legend>Enter User Details</legend>

<div>
<label>Name:</label>
<input type='text' name='user[username]'/>
</div>
  <div>
  <label>Email:</label>
  <input type='text' name='user[email]' />
  </div>
<div>
<label>Password:</label>
<input type='password' name='user[password]' />
</div>
  <div>
    <label>Confirm:</label>
    <input type='password' name='user[password_confirmation]'/>
  </div>
  <div>
  <label>Admin?</label>
    <input type="hidden" value="0" name="user[admin]" />
  <input type='checkbox' value="1" name='user[admin]'/>
  </div>
<input type='submit' value='Add User'/>
</fieldset>
  </form>
